@model ZentroApp.Models.Tipo_Usuario
@{
    ViewBag.Title = "Eliminar Tipo de Usuario";
}

<h2>¿Estás seguro de eliminar este tipo de usuario?</h2>

<div class="form-group">
    <label>Nombre:</label>
    <p class="form-control-static">@Model.Nombre</p>
</div>

<div class="form-group">
    <label>Descripción:</label>
    <p class="form-control-static">@Model.Descripcion</p>
</div>

@using (Html.BeginForm("Eliminar", "Tipo_Usuario", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id_tipousuario)

    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
}

