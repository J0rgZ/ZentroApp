@model ZentroApp.Models.Usuario

@{
    ViewBag.Title = "Detalle del Usuario";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-user"></i> Detalle del Usuario
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Información Personal -->
                        <div class="col-12">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="fas fa-id-card"></i> Información Personal
                            </h5>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="fas fa-hashtag"></i> ID de Usuario
                                    </h6>
                                    <p class="card-text h5">@Model.Id_usuario</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="fas fa-user"></i> Username
                                    </h6>
                                    <p class="card-text h5">@Model.Username</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="fas fa-user-circle"></i> Nombre
                                    </h6>
                                    <p class="card-text h5">@Model.Nombre</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="fas fa-user-circle"></i> Apellido
                                    </h6>
                                    <p class="card-text h5">@Model.Apellido</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="fas fa-envelope"></i> Correo Electrónico
                                    </h6>
                                    <p class="card-text h5">
                                        <a href="mailto:@Model.Correo" class="text-decoration-none">@Model.Correo</a>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Información del Sistema -->
                        <div class="col-12">
                            <h5 class="border-bottom pb-2 mb-3 mt-4">
                                <i class="fas fa-cogs"></i> Información del Sistema
                            </h5>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="fas fa-user-tag"></i> Tipo de Usuario
                                    </h6>
                                    <p class="card-text h5">
                                        @if (Model.Tipo_Usuario != null)
                                        {
                                            <span class="badge bg-info fs-6">@Model.Tipo_Usuario.Nombre</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary fs-6">Sin tipo asignado</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="fas fa-toggle-on"></i> Estado
                                    </h6>
                                    <p class="card-text h5">
                                        @if (Model.Estado == "A")
                                        {
                                            <span class="badge bg-success fs-6">
                                                <i class="fas fa-check-circle"></i> Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger fs-6">
                                                <i class="fas fa-times-circle"></i> Inactivo
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="fas fa-calendar-plus"></i> Fecha de Creación
                                    </h6>
                                    <p class="card-text h5">@Model.Fecha_creacion.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="fas fa-clock"></i> Tiempo Registrado
                                    </h6>
                                    <p class="card-text h5">
                                        @{
                                            var diasRegistrado = (DateTime.Now - Model.Fecha_creacion).Days;
                                        }
                                        @diasRegistrado días
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Resumen del Nombre Completo -->
                        <div class="col-12 mb-4">
                            <div class="alert alert-primary">
                                <h4 class="alert-heading">
                                    <i class="fas fa-user-circle"></i> @Model.Nombre @Model.Apellido
                                </h4>
                                <p class="mb-0">
                                    <strong>Username:</strong> @Model.Username |
                                    <strong>Correo:</strong> @Model.Correo
                                </p>
                            </div>
                        </div>

                        <!-- Acciones -->
                        <div class="col-12">
                            <div class="d-flex justify-content-between flex-wrap gap-2">
                                @Html.ActionLink("Volver al Listado", "Index", null, new { @class = "btn btn-secondary" })
                                <div>
                                    @Html.ActionLink("Editar Usuario", "Editar", new { id = Model.Id_usuario }, new { @class = "btn btn-warning me-2" })
                                    @Html.ActionLink("Eliminar Usuario", "Eliminar", new { id = Model.Id_usuario }, new { @class = "btn btn-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
